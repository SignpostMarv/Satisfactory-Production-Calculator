{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "recipe-ingredients-request--meta-schema",
	"type": "object",
	"required": ["$schema", "$id", "type", "minItems", "items"],
	"additionalProperties": false,
	"properties": {
		"$schema": {
			"type": "string",
			"const": "https://json-schema.org/draft/2020-12/schema"
		},
		"$id": {"type": "string", "const": "recipe-ingredients-request"},
		"type": {"type": "string", "const": "array"},
		"minItems": {"type": "integer", "const": 1},
		"items": {
			"type": "object",
			"required": [
				"type",
				"required",
				"additionalProperties",
				"properties"
			],
			"additionalProperties": false,
			"properties": {
				"type": {"type": "string", "const": "object"},
				"required": {
					"type": "array",
					"const": ["recipe", "amount"]
				},
				"additionalProperties": {
					"type": "boolean",
					"const": false
				},
				"properties": {
					"type": "object",
					"required": ["recipe", "amount"],
					"additionalProperties": false,
					"properties": {
						"recipe": {
							"type": "object",
							"required": ["type", "enum"],
							"additionalProperties": false,
							"properties": {
								"type": {
									"type": "string",
									"const": "string"
								},
								"enum": {
									"type": "array",
									"minItems": 1,
									"items": {
										"type": "string",
										"pattern": "^Recipe(?:_(?:[A-Za-z0-9]*))+_C$"
									}
								}
							}
						},
						"amount": {
							"type": "object",
							"const": {
								"oneOf": [
									{
										"type": "number",
										"minimum": 0,
										"multipleOf": 0.000001
									},
									{
										"type": "string",
										"pattern": "^\\d+(?:\\.\\d{1,6})?$"
									}
								]
							}
						}
					}
				}
			}
		}
	}
}
