{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "production-ingredients-request--meta-schema",
	"type": "object",
	"required": [
		"$schema",
		"$id",
		"type",
		"required",
		"additionalProperties",
		"properties"
	],
	"additionalProperties": false,
	"properties": {
		"$schema": {
			"type": "string",
			"const": "https://json-schema.org/draft/2020-12/schema"
		},
		"$id": {"type": "string", "const": "production-ingredients-request"},
		"type": {"type": "string", "const": "object"},
		"required": {"type": "array", "const": ["pool"]},
		"additionalProperties": {"type": "boolean", "const": false},
		"properties": {
			"type": "object",
			"required": ["recipe_selection", "pool"],
			"additionalProperties": false,
			"properties": {
				"recipe_selection": {
					"type": "object",
					"const": {"$ref": "recipe-selection"}
				},
				"pool": {
					"type": "object",
					"required": ["type", "minItems", "items"],
					"properties": {
		"type": {"type": "string", "const": "array"},
		"minItems": {"type": "integer", "const": 1},
		"items": {
			"type": "object",
			"required": [
				"type",
				"required",
				"additionalProperties",
				"properties"
			],
			"additionalProperties": false,
			"properties": {
				"type": {"type": "string", "const": "object"},
				"required": {
					"type": "array",
							"const": ["production", "amount"]
				},
				"additionalProperties": {
					"type": "boolean",
					"const": false
				},
				"properties": {
					"type": "object",
							"required": ["production", "amount"],
					"additionalProperties": false,
					"properties": {
								"production": {
							"type": "object",
							"required": ["type", "enum"],
							"additionalProperties": false,
							"properties": {
								"type": {
									"type": "string",
									"const": "string"
								},
								"enum": {
											"type": "object",
											"required": ["$ref"],
											"additionalProperties": false,
											"properties": {
												"$ref": {
													"type": "string",
													"const": "recipe-selection#required"
												}
									}
								}
							}
						},
						"amount": {
							"type": "object",
							"const": {
								"oneOf": [
									{
										"type": "number",
										"minimum": 0,
										"multipleOf": 0.000001
									},
									{
										"type": "string",
										"pattern": "^\\d+(?:\\.\\d{1,6})?$"
									}
								]
							}
						}
					}
				}
			}
		}
					}
				}
			}
		}
	}
}
