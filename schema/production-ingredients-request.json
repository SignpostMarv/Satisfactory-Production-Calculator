{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "production-ingredients-request--meta-schema",
	"$defs": {
		"number_arg": {
			"type": "object",
			"required": ["$ref"],
			"additionalProperties": false,
			"properties": {
				"$ref": {
					"type": "string",
					"const": "#/$defs/number_arg"
				}
			}
		},
		"item_amount_object": {
			"type": "object",
			"required": ["$ref"],
			"additionalProperties": false,
			"properties": {
				"$ref": {
					"type": "string",
					"const": "#/$defs/item_amount_object"
				}
			}
		}
	},
	"type": "object",
	"required": [
		"$schema",
		"$id",
		"$defs",
		"type",
		"required",
		"additionalProperties",
		"properties"
	],
	"additionalProperties": false,
	"properties": {
		"$schema": {
			"type": "string",
			"const": "https://json-schema.org/draft/2020-12/schema"
		},
		"$id": {"type": "string", "const": "production-ingredients-request"},
		"$defs": {
			"type": "object",
			"required": [
				"amount_string",
				"amount_string_flexible",
				"numeric_string",
				"number_arg",
				"item_amount_object",
				"IntermediaryNumber",
				"IntermediaryCalculation",
				"TokenScan",
				"CanConvertTypeJson"
			],
			"additionalProperties": false,
			"properties": {
				"amount_string": {
					"type": "object",
					"const": {
						"type": "string",
						"pattern": "^\\d+(?:\\.\\d{1,6})?$"
					}
				},
				"amount_string_flexible": {
					"type": "object",
					"const": {
						"oneOf": [
							{"$ref": "#/$defs/amount_string"},
							{
								"type": "string",
								"pattern": "^\\d*(?:\\.\\d{1,6})$"
							},
							{
								"type": "string",
								"pattern": "^\\d+$"
							}
						]
					}
				},
				"numeric_string": {
					"type": "object",
					"const": {
						"type": "string",
						"pattern": "^-?(?:\\d*\\.\\d+|\\d+(?:\\.\\d+)?)$"
					}
				},
				"number_arg": {
					"type": "object",
					"const": {
						"oneOf": [
							{
								"type": "number",
								"minimum": 0,
								"multipleOf": 0.000001
							},
							{"$ref": "#/$defs/amount_string"},
							{"$ref": "#/$defs/CanConvertTypeJson"}
						]
					}
				},
				"item_amount_object": {
					"type": "object",
					"required": [
						"type",
						"required",
						"additionalProperties",
						"properties"
					],
					"additionalProperties": false,
					"properties": {
						"type": {"type": "string", "const": "object"},
						"required": {
							"type": "array",
							"const": ["item", "amount"]
						},
						"additionalProperties": {
							"type": "boolean",
							"const": false
						},
						"properties": {
							"type": "object",
							"required": ["item", "amount"],
							"additionalProperties": false,
							"properties": {
								"item": {
									"type": "object",
									"required": ["type", "enum"],
									"additionalProperties": false,
									"properties": {
										"type": {
											"type": "string",
											"const": "string"
										},
										"enum": {
											"type": "array",
											"minItems": 1,
											"uniqueItems": true,
											"items": {
												"type": "string",
												"pattern": "^(?:Desc|BP|Foundation)_[^.]+_C$"
											}
										}
									}
								},
								"amount": {
									"$ref": "#/$defs/number_arg"
								}
							}
						}
					}
				},
				"IntermediaryNumber": {
					"type": "object",
					"const": {
						"type": "object",
						"required": ["type", "value"],
						"additionalProperties": false,
						"properties": {
							"type": {
								"type": "string",
								"const": "IntermediaryNumber"
							},
							"value": {
								"oneOf": [
									{
										"$ref": "#/$defs/amount_string_flexible"
									},
									{
										"$ref": "#/$defs/numeric_string"
									},
									{
										"type": "string",
										"pattern": "^(-?\\d+(?:\\.\\d+))e([+-])(\\d+)$"
									}
								]
							}
						}
					}
				},
				"IntermediaryCalculation": {
					"type": "object",
					"const": {
						"type": "object",
						"required": ["type", "left", "operation", "right"],
						"additionalProperties": false,
						"properties": {
							"type": {
								"type": "string",
								"const": "IntermediaryCalculation"
							},
							"left": {
								"$ref": "#/$defs/CanConvertTypeJson"
							},
							"operation": {
								"type": "string",
								"enum": ["+", "-", "*", "x", "/", "%"]
							},
							"right": {
								"$ref": "#/$defs/CanConvertTypeJson"
							}
						}
					}
				},
				"TokenScan": {
					"type": "object",
					"const": {
						"type": "object",
						"required": ["type", "value"],
						"additionalProperties": false,
						"properties": {
							"type": {"type": "string", "const": "TokenScan"},
							"value": {"type": "string"}
						}
					}
				},
				"CanConvertTypeJson": {
					"type": "object",
					"const": {
						"oneOf": [
							{
								"$ref": "#/$defs/IntermediaryNumber"
							},
							{
								"$ref": "#/$defs/IntermediaryCalculation"
							},
							{
								"$ref": "#/$defs/TokenScan"
							}
						]
					}
				}
			}
		},
		"type": {"type": "string", "const": "object"},
		"required": {"type": "array", "const": ["pool"]},
		"additionalProperties": {"type": "boolean", "const": false},
		"properties": {
			"type": "object",
			"required": ["input", "recipe_selection", "pool"],
			"additionalProperties": false,
			"properties": {
				"input": {
					"type": "object",
					"required": ["type", "minItems", "uniqueItems", "items"],
					"additionalProperties": false,
					"properties": {
						"type": {"type": "string", "const": "array"},
						"minItems": {"type": "integer", "const": 1},
						"uniqueItems": {"type": "boolean", "const": true},
						"items": {
							"$ref": "#/$defs/item_amount_object"
						}
					}
				},
				"recipe_selection": {
					"type": "object",
					"const": {"$ref": "recipe-selection"}
				},
				"pool": {
					"type": "object",
					"required": ["type", "minItems", "items"],
					"properties": {
						"type": {"type": "string", "const": "array"},
						"minItems": {"type": "integer", "const": 1},
						"items": {
							"$ref": "#/$defs/item_amount_object"
						}
					}
				}
			}
		}
	}
}
